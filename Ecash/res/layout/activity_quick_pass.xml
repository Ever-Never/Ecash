<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/tv_input_purchase_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@+string/str_input_purchase_money" />

    <EditText
        android:id="@+id/et_input_purchase_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_input_purchase_money"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/bt_input_purchasetmoney_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_input_purchase_money"
        android:text="OK" />

</RelativeLayout>

